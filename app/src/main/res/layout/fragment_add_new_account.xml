<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet_100"
    tools:context=".onboarding.AddNewAccountFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height64"
        android:layout_marginTop="@dimen/margin64"
        android:paddingTop="@dimen/padding16" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/account_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin16"
        android:layout_marginTop="@dimen/margin148"
        android:fontFamily="@font/inter_600_semibold"
        android:text="@string/add_account_balance"
        android:textColor="@color/light_80"
        android:textSize="@dimen/textSize18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin16"
        android:layout_marginTop="@dimen/margin13"
        android:fontFamily="@font/inter_600_semibold"
        android:text="@string/account_balance_placeholder"
        android:textColor="@color/light_80"
        android:textSize="@dimen/textSize64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_balance_label" />

    <include
        android:id="@+id/design_bottom_sheet"
        layout="@layout/add_bank_bottom_sheet_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height64"
        android:layout_marginTop="@dimen/margin64"
        android:paddingTop="@dimen/padding16" />

</androidx.constraintlayout.widget.ConstraintLayout>